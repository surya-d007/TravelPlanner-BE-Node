    <% day.places.forEach(place => { %>
            <div class="row">
                <div >
                    <ul style="font-size: 40px; ">
                        <li>
                            <p style="font-weight:900;"><%= place.description %></p>
                            <p><span style="font-weight: 600;"> About : </span><%= place.about%></p>
                            <p><span style="font-weight: 600;"> Uniqueness : </span><%= place.uniqueness %></p>
                            <p><span style="font-weight: 600;"> Must try : </span><%= place.mustTry %></p>
                            
                        </li>
                    </ul>

                    <% if (place.distance && place.distance.text) { %>


